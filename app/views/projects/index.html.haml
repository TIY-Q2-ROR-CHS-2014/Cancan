%h1 Listing projects
%table
  %thead
    %tr
      %th Name
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.description
        %td= link_to 'Show', project if can? :read, Project
        %td= link_to 'Edit', edit_project_path(project) if can? :update, Project
        %td= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Project
%br/
= link_to 'New Project', new_project_path if can? :create, Project
